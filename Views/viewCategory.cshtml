@Html.Partial("header.cshtml")

<h1>@Model.GetName()</h1>

<ul>
  @foreach(var item in @Model.GetTasks())
  {
    <li class="task"><input type="checkbox" name="check" id="check" value="@item.GetId()"
    @if(@item.GetChecked() > 0) { @Html.Raw("checked") }
    ><label for="check">@item.GetDescription()</label></li>
  }
</ul>

<form action="/cat/@Model.GetId()/addTask" method="post">
  <label for="description">Add Task:</label>
  <input type="text" name="description">
  <input type="submit" value="Add Task">
</form>

<a href="/" class="link">Go Home</a>